# Database (Only needed for local development, Docker uses its own configuration)
DATABASE_URL=postgresql+asyncpg://simplifychat:simplifychat@localhost:5432/simplifychat

# Gemini AI (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Settings (Optional, for future authentication)
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PostgreSQL Settings (Only needed for local development)
POSTGRES_USER=simplifychat
POSTGRES_PASSWORD=simplifychat
POSTGRES_DB=simplifychat 